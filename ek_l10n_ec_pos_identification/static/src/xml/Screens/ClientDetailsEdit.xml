<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">




    <t t-name="ClientDetailsEditIdentec" t-inherit="point_of_sale.ClientDetailsEdit"
       t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('client-details-box')]" position="before">
            <div class="client-details-box clearfix">
                <div class="client-details-left">

                    <div class="client-detail">
                        <span class="label">Tipo Doc.</span>
                        <select class="detail l10n_latam_identification_type_id needsclick"
                                name="l10n_latam_identification_type_id" t-on-change="captureChange">
                            <option value='0'>None</option>
                            <t t-foreach="env.pos.identification_type" t-as="identification_type"
                               t-key="identification_type.id">
                                <option t-att-value="identification_type.id"
                                        t-att-selected="props.partner.l10n_latam_identification_type_id ? ((identification_type.id === props.partner.l10n_latam_identification_type_id[0]) ? true : undefined) : undefined">
                                    <t t-esc="identification_type.display_name"/>
                                </option>
                            </t>
                        </select>
                    </div>


                </div>
            </div>
        </xpath>
    </t>
</templates>