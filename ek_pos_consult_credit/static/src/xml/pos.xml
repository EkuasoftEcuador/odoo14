<?xml version="1.0" encoding="UTF-8" ?>

<templates id="template" xml:space="preserve" >



    <t t-name="PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('payment-screen')]" position="inside">


               <div class="bottom-left-content" id="ekconsult" t-on-click="renderElement">

                    <div t-attf-class="button validatekcredit validate">
                        <div class="button-content">
                            <span class="title" />
                                Consultar Creditos
                            <span>

                            </span>
                            <!-- add space between title and arrow -->
                            <span>
                                <i class='fa fa-angle-double-right' />
                            </span>
                        </div>
                    </div>
                </div>
        </xpath>
    </t>



    <t t-name="EkconsultCredPopupWidget" owl="1">
        <div class="modal-dialog">
        <div class="popup popup-confirm ekCreditModal" style="height: 350px;">
                <p class="title" style="background-color: rgb(110,200,155); color: #fff;">Creditos Disponibles</p>
            <div class="body">

                    <table id="ek_credit_history" class='ekcred-list'>
                    <thead>
                        <tr>
                            <th>Numero</th>
                            <th>Fecha</th>
                            <th>Monto</th>
                        </tr>
                    </thead>
                    <tbody id='credit_history_contents'>
                        <tr t-foreach="props.creditlines || []" t-as="item"
                            t-att-data-ekcredit-id="item.id">
                            <td>
                                <t t-esc="item ? item.name : ''"/>
                            </td>
                            <td>
                                <t t-esc="item ? item.date : ''"/>
                            </td>
                            <td class="pos_text_center">
                                <t t-esc="item ? item.balance : ''"/>
                            </td>
                       </tr>
                    </tbody>
                </table>

            </div>
            <div>
                <div class="total">
                    <t t-esc="props.total_balance"/>
                </div>
                <div class="message">
                    Su credito disponible.
                </div>
            </div>
          <span />
            <span />
            <span />

            <div class="footer" style="background-color: rgb(110,200,155); color: #fff;position:fixed;bottom:0;">
                	<div class="button cancel" style="background-color: #0075AC; color: #fff;"
                         t-on-click="go_back_screen">
                        Cerrar
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
